{
    "name": "resume-parser-action",
    "version": "1.0.0",
    "description": "GitHub Action to parse PDF resumes into JSON Resume format",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "package": "ncc build --source-map --license licenses.txt",
        "test": "jest",
        "test:watch": "jest --watch",
        "create-test-pdf": "node ./scripts/create-test-pdfs.js",
        "create-test-json": "node ./src/index.ts --pdf_path=./src/__tests__/fixtures/sample-resume.pdf",
        "prepare": "npm run build && npm run package"
    },
    "keywords": [
        "github",
        "action",
        "resume",
        "parser",
        "pdf"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@actions/core": "^1.10.1",
        "pdf-parse": "^1.1.1",
        "resume-schema": "^1.0.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@types/node": "^20.8.0",
        "@types/pdf-parse": "^1.1.4",
        "@types/pdfkit": "^0.13.8",
        "@vercel/ncc": "^0.38.0",
        "jest": "^29.7.0",
        "pdfkit": "^0.16.0",
        "ts-jest": "^29.2.5",
        "typescript": "^5.2.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    }
}
